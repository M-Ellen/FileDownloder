<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/rl_icon"
            android:layout_width="80dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_download_icon"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"

                android:layout_marginTop="8dp" />


            <ImageView
                android:id="@+id/iv_edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_download_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fl_download_pro"
            android:layout_toRightOf="@+id/rl_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="20dp" />


        <FrameLayout
            android:id="@+id/fl_download_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <com.pzm.netroiddemo.widget.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:roundColor="#88ffffff"
                app:roundProgressColor="#f49d2c"
                app:roundWidth="8dp"
                app:textColor="@color/colorAccent"
                app:textIsDisplayable="true"
                app:textSize="14dp" />


        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
